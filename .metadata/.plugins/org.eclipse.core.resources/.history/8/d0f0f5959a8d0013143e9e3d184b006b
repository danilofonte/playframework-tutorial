package controllers;

import java.util.Date;
import java.util.List;

import models.Post;
import models.Tag;
import models.User;
import play.mvc.Before;
import play.mvc.Controller;
import play.mvc.With;

@With(Secure.class)
public class Admin extends Controller {

	@Before
	static void setConnectedUser() {
		if (Security.isConnected()) {
			User user = User.find("byEmail", Security.connected()).first();
			renderArgs.put("user", user.name);
		}
	}

	public static void index() {
		String user = Security.connected();
		List<Post> posts = Post.find("author.email", user).fetch();
		render(posts);
	}

	public static void form(Long id) {
		if (id != null) {
			Post post = Post.findById(id);
			render(post);
		}
		render();
	}

	public static void save(String title, String content, String tags) {
		User author = User.find("byEmail", Security.connected()).first();
		Post post = new Post(title, new Date(), content, author);
		// Set tags list
		for (String tag : tags.split("\\s+")) {
			if (tag.trim().length() > 0) {
				post.tags.add(Tag.criaEBuscaPorNome(tags));
				;
			}
		}
		// Validate
		validation.valid(post);
		if (validation.hasErrors()) {
			render("@form", post);
		}
		// Save
		post.save();
		index();
	}

}